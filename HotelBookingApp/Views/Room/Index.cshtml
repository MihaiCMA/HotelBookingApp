@model List<Room>

@{
    ViewData["Title"] = "Room List";
    bool isAdmin = User.IsInRole("Admin");
}
@if (isAdmin)
{
    <div class="container">
        <a href="/room/createroom" class="btn btn-primary">Create Room</a>
    </div>
}


<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-center row">
        <div class="col-md-10">
            @foreach (var room in Model)
            {
                <div class="row p-2 bg-white border rounded">
                    <div class="col-md-3 mt-1"><img class="img-fluid img-responsive rounded product-image" src="@room.ImageUrl"></div>
                    <div class="col-md-6 mt-1">
                        <h5>@room.Name</h5>
                        <div class="d-flex flex-row">
                            <div class="ratings mr-2"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></div><span>Room number: @room.PaddedNumber()</span>
                        </div>
                        <p class="text-justify text-truncate para mb-0">@room.Description<br><br></p>
                    </div>
                    <div class="align-items-center align-content-center col-md-3 border-left mt-1">
                        <div class="d-flex flex-row align-items-center">
                            <h4 class="mr-1">$@room.Price/night</h4>
                        </div>
                        <div class="d-flex flex-column mt-4">
                            @Html.ActionLink("Details", "Details", "Room", new { roomId = room.Id }, new { @class = "btn btn-outline-primary btn-sm mt-2" })
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</div>
